<?xml version="1.0" encoding="utf-8"?>
<com.zhx.one.widget.MyNestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".mvp.read.view.EssayDetailActivity"
    tools:showIn="@layout/activity_essay_detail">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


   <LinearLayout
       android:background="@android:color/white"
       android:visibility="gone"
       android:id="@+id/ll_essay"
       android:paddingTop="15dp"
       android:paddingRight="10dp"
       android:paddingLeft="10dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:orientation="horizontal">
               <ImageView
                   android:id="@+id/img_essay"
                   android:src="@mipmap/ic_launcher"
                   android:scaleType="centerCrop"
                   android:layout_width="48dp"
                   android:layout_height="48dp"/>

               <RelativeLayout
                   android:paddingLeft="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/tv_essay_maketime"
                       android:layout_alignParentBottom="true"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Dec·04·2016"
                       />

                   <TextView
                       android:id="@+id/tv_essay_author"
                       android:text="孔龙"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentTop="true"
                       android:layout_alignParentLeft="true"
                       android:layout_alignParentStart="true"/>

               </RelativeLayout>

           </LinearLayout>

           <TextView
               android:id="@+id/tv_essay_title"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="#292421"
               android:textSize="20sp"
               android:paddingTop="15dp"
               android:text="离开的人不会再回来"/>

       <WebView
           android:layout_marginTop="15dp"
           android:id="@+id/essay_webview"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

       </WebView>



    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_serial"
        android:paddingTop="15dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_serial"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:layout_width="48dp"
                android:layout_height="48dp"/>

            <RelativeLayout
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_serial_maketime"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dec·04·2016"
                    />

                <TextView
                    android:id="@+id/tv_serial_author"
                    android:text="孔龙"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_serial_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#292421"
            android:textSize="20sp"
            android:paddingTop="15dp"
            android:text="离开的人不会再回来"/>

        <WebView
            android:layout_marginTop="15dp"
            android:id="@+id/serial_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </WebView>


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_question"
        android:paddingTop="15dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_question_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/black_text"
                android:text="超人为何要穿红色的内裤？"/>

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/tv_question_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text"
                android:text="小丑先生：有件事，从小到大我都百思不得其解，就是为何超人总要外穿红色内裤飞来飞去，请问下超人为何要穿红色的内裤？"/>

            <View
                android:layout_marginTop="15dp"
                android:background="#C1CDCD"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_question_answer_title"
                    android:textColor="@color/black_text"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="朱肖影 答小丑先生"/>

                <TextView
                    android:id="@+id/tv_question_maketime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-11-27 23:00:00"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

        </LinearLayout>


        <WebView
            android:layout_marginTop="15dp"
            android:id="@+id/question_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </WebView>





    </LinearLayout>
        <TextView
            android:id="@+id/tv_comment"
            android:visibility="gone"
            android:text="评论列表"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_essay"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_question"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <!--<TextView

            android:text="评论列表"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_serial"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</com.zhx.one.widget.MyNestedScrollView>
