<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"

        android:orientation="vertical">


    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_user_url"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_width="32dp"
            android:layout_height="32dp"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:text="孔龙"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"/>


    </LinearLayout>

        <TextView
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#292421"
            android:layout_marginTop="10dp"
            android:text="离开的人不会再回来"/>

        <RelativeLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_input_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Dec·04·2016"
                />

            <ImageView
                android:id="@+id/img_praise"
                android:src="@drawable/icon_praise"
                android:gravity="center_horizontal"
                android:layout_width="16dp"
                android:layout_height="16dp"/>

            <TextView
                android:id="@+id/tv_praise"
                android:text="55"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_praise"
                android:gravity="center_horizontal"/>
        </RelativeLayout>

        <View
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="0.5dp"/>

    </LinearLayout>





</FrameLayout>